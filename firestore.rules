rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userEmail) {
      return isAuthenticated() && 
             resource.data.user_email == userEmail;
    }
    
    // Grocery items collection
    match /grocery_items/{itemId} {
      // Allow read if user is authenticated and owns the item
      allow read: if isAuthenticated() && 
                     resource.data.user_email == request.auth.token.email;
      
      // Allow create if user is authenticated and sets their own email
      allow create: if isAuthenticated() && 
                      request.resource.data.user_email == request.auth.token.email &&
                      request.resource.data.name is string &&
                      request.resource.data.category is string &&
                      request.resource.data.quantity is int &&
                      request.resource.data.price is number;
      
      // Allow update if user is authenticated and owns the item
      allow update: if isAuthenticated() && 
                       resource.data.user_email == request.auth.token.email &&
                       request.resource.data.user_email == request.auth.token.email;
      
      // Allow delete if user is authenticated and owns the item
      allow delete: if isAuthenticated() && 
                       resource.data.user_email == request.auth.token.email;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
